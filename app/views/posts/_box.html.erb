<div class="col-sm-6 col-md-4 col-lg-4">
  <div class="thumbnail">
    <%= link_to post_path(post.section.permalink, post.permalink, title: post.title) do %>
      <%= image_tag(post.banner_url(:thumb) || 'http://via.placeholder.com/350x200', alt: post.title) %>
    <% end %>
    <div class="caption">
      <h3><%= post.title %></h3>
      <p><%= strip_html_tags(post.body)[0..300] %>...</p>
      <p>
        <%= link_to('Ver más', post_path(post.section.permalink, post.permalink), role: 'button', alt: 'Ver más', class: 'btn btn-primary') %>
      </p>
    </div>
  </div>
</div>

<% if ((post_counter + 1) % 3 == 0) %>
  <div class="clearfix visible-md visible-lg"></div>
<% end %>

<% if ((post_counter + 1) % 2 == 0) %>
  <div class="clearfix visible-sm"></div>
<% end %>
