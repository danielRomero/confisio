= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body

  = f.cktext_area :body, :class => 'someclass', :ckeditor => {:language => 'es'}
  
  = f.cktext_area :body, :value => 'Default value', :id => 'sometext'
  
  = cktext_area :body, :info, :cols => 40, :ckeditor => {:uiColor => '#AADC6E', :toolbar => 'mini'}
  
  .actions
    = f.submit 'Save'
  