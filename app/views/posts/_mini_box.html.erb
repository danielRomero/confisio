<div class="hidden-xs col-sm-6 col-md-3 col-lg-3 ">
  <div class="thumbnail">
    <%= link_to post_path(post.section.permalink, post.permalink, title: post.title) do %>
      <%= image_tag(post.banner_url(:mini_thumb) || 'http://via.placeholder.com/350x200', alt: post.title) %>
    <% end %>
    <div class="caption">
      <h4><%= post.title %></h4>
      <p>
        <%= link_to('Ver más', post_path(post.section.permalink, post.permalink), title: 'Ver más', role: 'button', class: 'btn btn-primary') %>
      </p>
    </div>
  </div>
</div>


<% if ((post_counter + 1) % 4 == 0) %>
  <div class="clearfix visible-md visible-lg"></div>
<% end %>

<% if ((post_counter + 1) % 2 == 0) %>
  <div class="clearfix visible-sm"></div>
<% end %>
