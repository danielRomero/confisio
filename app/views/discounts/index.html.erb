<div class="page-header">
  <h2>Lista de descuentos <small><%= link_to('Pide cita online', contact_path) %> o por tel√©fono <%= Settings.phone %></small></h2>
</div>

<ul class="nav nav-tabs" role="tablist">
  <% @sections.each_with_index do |section, index| %>
  <li role="presentation" class="<%= prices_tab_active?(index, section) ? 'active' : nil %>">
    <a href="#<%= section.permalink %>" aria-controls="<%= section.permalink %>" role="tab" data-toggle="tab"><%= section.title.capitalize %></a>
  </li>
  <% end %>
</ul>

<div class="tab-content">
  <% @sections.each_with_index do |section, index| %>
  <div role="tabpanel" class="tab-pane <%= prices_tab_active?(index, section) ? 'active' : nil %>" id="<%= section.permalink %>">
    <div class='row'>
      <%= render section.discounts %>
    </div>
  </div>
  <% end %>
</div>
