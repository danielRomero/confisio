<div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
  <div class="list-group text-center">
    <div class="list-group-item active">
      <h3>
        <%= pretty_price(discount) %>
      </h3>
    </div>

    <div class="list-group-item">
      <b><%= discount.title.capitalize %></b>
    </div>
    
    <% if discount.valid_to %>
      <div class="list-group-item">
        <i class="glyphicon glyphicon-time"></i>
        Caduca <%= l(discount.valid_to.to_date, format: :long) %>
      </div>
    <% end %>
    
    <% unless discount.description.blank? %>
      <div class="list-group-item">
        <%= discount.description.html_safe %>
      </div>
    <% end %>

    <% unless discount.conditions.blank? %>
      <div class="list-group-item">
        <small><%= discount.conditions.html_safe %></small>
      </div>
    <% end %>
    
    <div class="list-group-item">
      <%= link_to('Pedir cita ahora', contact_path, class: 'btn btn-primary btn-block btn-big') %>
    </div>
  </div>
</div>
