- cache ['v1', 'discounts', 'index', cache_key_for_discounts] do
  %ol.breadcrumb{vocab: 'http://schema.org/', typeof: 'BreadcrumbList'}
    %li{property: 'itemListElement', typeof: 'ListItem'}
      =link_to(root_path, property: 'item', typeof: 'WebPage') do
        %span{property: 'name'}=APP_NAME.capitalize
      %meta{property: 'position', content: '1'}
    %li{property: 'itemListElement', typeof: 'ListItem'}
      =link_to(sections_permalink_path(@section.permalink), property: 'item', typeof: 'WebPage') do
        %span{property: 'name'}=@section.name.capitalize
      %meta{property: 'position', content: '2'}
    %li{property: 'itemListElement', typeof: 'ListItem'}
      =link_to(prices_path(@section.permalink), property: 'item', typeof: 'WebPage') do
        %span{property: 'name'}='Precios'
      %meta{property: 'position', content: '3'}
    %li.active Descuentos

  .page-header
    %h1= "Descuentos de #{@section.name}"
  -@discounts.each do |discount|
    %p=discount.title
    %b
      ="#{'%.2f' % discount.value.round(2)} €"
    %p
      =discount.description
      =link_to 'Condiciones', discount_path(@section.permalink, discount.permalink)
    
    -if admin?
      =link_to('Editar', edit_discount_path(@section.permalink, discount.permalink))
      |
      =link_to 'Borrar', discount_path(@section.permalink, discount.permalink), method: :delete, data: {confirm: '¿Quieres borrar este descuento?'}
    %hr  
  -if admin?
    =link_to 'Volver (Panel de control)', setting_path(@section.permalink)
    |
    =link_to 'Nuevo descuento', new_discount_path(@section.permalink)
  -else
    =link_to 'Volver', prices_path(@section.permalink)