= form_for [:admin, @category] do |f|
  - if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this discount from being saved:"
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg
  .col-xs-12.col-sm-12.col-md-8.col-lg-8
    .form-group
      = f.label :name, 'Nombre'
      = f.text_field :name, class: 'form-control'
    .form-group
      = f.label :description, 'Descripción (si aquí no carga una caja de texto con botones, recarga la página)'
      = f.cktext_area :description, :cols => 40, :ckeditor => {:toolbar => 'mini', :language => 'es'}
    .actions.pull-right
      = f.submit 'Guardar', class: 'btn btn-primary'
    =link_to 'Volver', admin_categories_path
  .clearfix