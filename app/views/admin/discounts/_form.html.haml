= form_for [:admin, @discount] do |f|
  .col-xs-12.col-sm-6.col-md-6.col-lg-6
    - if @discount.errors.any?
      #error_explanation
        %h2= "#{pluralize(@discount.errors.count, "error")} prohibited this discount from being saved:"
        %ul
          - @discount.errors.full_messages.each do |msg|
            %li= msg
    .form-group
      = f.label :title, 'Título'
      = f.text_field :title, class: 'form-control'
    .form-group
      = f.label :value, 'Precio'
      = f.number_field :value, class: 'form-control', min: 0, max: 9999, step: 0.01
    .form-group
      = f.label :description, 'Descripción (si aquí no carga una caja de texto con botones, recarga la página)'
      = f.cktext_area :description, :cols => 40, :ckeditor => {:toolbar => 'mini', :language => 'es'}
    .form-group
      = f.label :conditions, 'Condiciones'
      = f.text_area :conditions, class: 'form-control', value: @discount.conditions || 'Descuento por sesión, no acumulables a otros descuentos u otras ofertas. Descuento válido hasta FECHA'
    .actions.pull-right
      = f.submit 'Guardar', class: 'btn btn-primary'
    =link_to 'Volver', admin_discounts_path
  .clearfix