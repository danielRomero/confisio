<p id="notice"><%= notice %></p>

<h1>Sections</h1>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.id %></td>
        <td><%= section.title.capitalize %></td>
        <td>
          <%= link_to section_path(section.permalink) do %>
            Ver <div class="fa fa-eye"></div>
          <% end %>
        </td>
        <td>
          <%= link_to edit_admin_section_path(section) do %>
            Editar <div class="fa fa-pencil"></div>
          <% end %>
        </td>

        <td>
          <%= link_to(admin_section_path(section), method: :delete, data: { confirm: 'Are you sure?' }) do %>
            Borrar <div class="fa fa-trash"></div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_admin_section_path %>
