<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>#</th>
      <th>Creado</th>
      <th>Actualizado</th>
      <th>Section</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.created_at.strftime('%d/%m/%Y') %></td>
        <td><%= post.updated_at.strftime('%d/%m/%Y') %></td>
        <td><%= post.section.title %></td>
        <td><%= post.title %></td>
        <td><%= link_to 'Show', post_path(post.section.permalink, post.permalink) %></td>
        <td><%= link_to 'Edit', edit_admin_post_path(post) %></td>
        <td><%= link_to 'Destroy', admin_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_admin_post_path %>
