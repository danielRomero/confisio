<p id="notice"><%= notice %></p>

<h1>Prices</h1>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>#</th>
      <th>Section</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.id %></td>
        <td><%= price.section.title %></td>
        <td><%= price.value %></td>
        <td><%= link_to 'Show', section_discounts_path(price.section.permalink) %></td>
        <td><%= link_to 'Editar', edit_admin_price_path(price) %></td>
        <td><%= link_to 'Borrar', admin_price_path(price), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

