<div class="page-header">
  <h1>Panel Administrador</h1>
</div>

<div class="list-group">

  <%= link_to admin_free_calls_path, class: 'list-group-item' do %>
    <span class="badge <%= FreeCall.status_contacted.any? ? 'alert-danger' : 'alert-success' %>"><%= FreeCall.count %></span>
    Te llamamos gratis
  <% end %>

  <%= link_to admin_posts_path, class: 'list-group-item' do %>
    <span class="badge"><%= Post.count %></span>
    Artículos
  <% end %>

  <%= link_to admin_prices_path, class: 'list-group-item' do %>
    <span class="badge"><%= Price.count %></span>
    Precios
  <% end %>

  <%= link_to admin_discounts_path, class: 'list-group-item' do %>
    <span class="badge"><%= Section.count %></span>
    Descuentos
  <% end %>

  <%= link_to admin_sections_path, class: 'list-group-item' do %>
    <span class="badge"><%= Section.count %></span>
    Secciones
  <% end %>

  <%= link_to admin_carousel_images_path, class: 'list-group-item' do %>
    <span class="badge alert-success"><span class="fa fa-cogs"></span></span>
    Fotos página principal
  <% end %>
</div>
