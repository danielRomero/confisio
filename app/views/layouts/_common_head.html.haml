%meta{ charset: 'utf-8' }
%meta{ 'http-equiv' => 'X-UA-Compatible', content: 'IE=edge' }
%meta{ content: 'width=device-width, initial-scale=1', name: 'viewport' }
%meta{ content: I18n.locale, 'http-equiv' => 'Content-Language' }
%meta{ name: 'Description', content: (@description and !@description.blank?) ? @description : AppConfiguration.first.description || 'Clínica de fisioterapia y psicología en Madrid. Para nosotros es importante resolver tus dudas, y que entiendas las causas del problema, para hacerte participe del tratamiento y evitar recaidas. Fisioterapeutas y psicólogos colegiados en constante formación.' }
%title{itemprop: 'name'}= @titulo ? "Confisio · #{@titulo}" : "Confisio · Fisioterapia y Psicología"

-if @author and !@author.google_plus_url.blank?
  %link{ rel: 'author', href: @author.google_plus_url }

=render partial: 'layouts/opengraph'
=render partial: 'layouts/icon' unless Rails.env.development?

%link{rel: 'canonical', href: (@meta_url and !@meta_url.blank?) ? @meta_url : root_url, itemprop: 'url', hreflang: I18n.locale}
= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true, async: true
= javascript_include_tag 'application', 'data-turbolinks-track' => true
