.page-header
  %h1
    ="Precio por sesión de #{@section.name}"
    %small="#{'%.2f' % @setting.base_price.round(2)} €"
%h1="Descuentos"
-@section.discounts.each do |discount|
  %p
    =discount.title
    %b="#{'%.2f' % discount.value.round(2)} €"
    =link_to 'Condiciones', discount_path(@section.permalink, discount.permalink)
%hr
=link_to 'Volver', section_path(@section.permalink)