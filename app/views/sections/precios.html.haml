- cache ['v1', 'section', 'precios', @section] do
  %ol.breadcrumb{vocab: 'http://schema.org/', typeof: 'BreadcrumbList'}
    %li{property: 'itemListElement', typeof: 'ListItem'}
      =link_to(root_path, property: 'item', typeof: 'WebPage') do
        %span{property: 'name'}=APP_NAME.capitalize
      %meta{property: 'position', content: '1'}

    %li{property: 'itemListElement', typeof: 'ListItem'}
      =link_to(sections_permalink_path(@section.permalink), property: 'item', typeof: 'WebPage') do
        %span{property: 'name'}=@section.name.capitalize
      %meta{property: 'position', content: '2'}
    %li.active='Precios'

  .page-header
    %h1
      Precios
      %small= @section.name

  .row
    .col-xs-12.col-sm-6.col-sm-offset-3.col-md-6.col-md-offset-3.col-lg-6.col-lg-offset-3
      .well.text-center
        %h3 
          %b= @section.name
        %hr
        -if @section.setting.session_duration.present?
          Duración de la sesión
          %p= time_to_hour_minute @section.setting.session_duration
          %hr
        %p
          %b="#{'%.2f' % @section.setting.base_price.round(2)} € / sesión"
        %hr
        =link_to 'Descuentos', section_discounts_path(@section.permalink), class: 'btn btn-primary btn-block'