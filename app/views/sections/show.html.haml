- cache ['v1', 'section', 'show', @section] do
  %ol.breadcrumb{vocab: 'http://schema.org/', typeof: 'BreadcrumbList'}
    %li{property: 'itemListElement', typeof: 'ListItem'}
      =link_to(root_path, property: 'item', typeof: 'WebPage') do
        %span{property: 'name'}=APP_NAME.capitalize
      %meta{property: 'position', content: '1'}
    %li.active=@section.name.capitalize
    
  .page-header
    %h1
      =@section.name
    =link_to 'Precios y descuentos', prices_path(@section.permalink)
  %p=@section.setting.description

  -if @section.categories
    %ul.list-unstyled
      -@section.categories.each do |category|
        %li=link_to category.name, category_path(@section.permalink, category.permalink)
        -if category.posts
          %ul
            -category.posts.each do |post|
              %li=link_to post.title, post_permalink_path(@section.permalink, category.permalink, post.permalink)