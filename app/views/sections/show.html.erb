<% if @section.banner.present? %>
  <div class="container">
    <div class="row-fluid">
      <div class="span12">
        <div class="bg-image">
          <%= image_tag(@section.banner_url(:header), alt: @section.title, class: 'img-responsive') %>
          <h2><%= @section.title %></h2>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <h2><%= @section.title.capitalize %></h2>
<% end %>

<p><%= @section.body.html_safe %></p>

<div class="full-height">
  <div class="row">
    <%= render partial: 'posts/box', collection: @section.posts.latest, as: :post %>
  </div>
</div>


