= form_for @setting, url: setting_path(@section.permalink) do |f|
  - if @setting.errors.any?
    #error_explanation
      %h2= "#{pluralize(@setting.errors.count, "error")} prohibited this discount from being saved:"
      %ul
        - @setting.errors.full_messages.each do |msg|
          %li= msg
  .col-xs-12.col-sm-4.col-md-4.col-lg-4
    .form-group
      = f.label :base_price, 'Precio por sesión'
      = f.number_field :base_price, class: 'form-control', min: 0, max: 999, step: 0.01, required: true
    .form-group
      = f.label :meta_keywords, 'Palabras clave (separadas por coma)'
      = f.text_field :meta_keywords, class: 'form-control'
    .form-group
      = f.label :email
      = f.text_field :email, class: 'form-control'
  .col-xs-12.col-sm-8.col-md-8.col-lg-8
    .form-group
      = f.label :description, 'Descripción (si aquí no carga una caja de texto con botones, recarga la página)'
      = f.cktext_area :description, :cols => 40, :ckeditor => {:toolbar => 'mini', :language => 'es'}
    .actions.pull-right
      = f.submit 'Guardar', class: 'btn btn-primary'