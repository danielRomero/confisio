#carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
  / Indicators
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
    %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
    %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
    %li{"data-slide-to" => "3", "data-target" => "#carousel-example-generic"}
    %li{"data-slide-to" => "4", "data-target" => "#carousel-example-generic"}
  
  .carousel-inner{:role => "listbox"}
    .item.active
      .carousel_image_holder
        =image_tag('logo-confisio.png', class: 'img-responsive', alt: 'Fisioterapeutas colegiados en constante formación')
    .item
      .carousel_image_holder
        =image_tag('http://www.crfvilanova.com/wp-content/uploads/2013/11/fisioterapia_rodillas_articulaciones.jpg', class: 'img-responsive', alt: 'Puedes dejar tu cuerpo en mejores condiciones tras la lesión')
      .carousel-caption
        %h3 Puedes dejar tu cuerpo en mejores condiciones tras la lesión
    .item
      .carousel_image_holder
        =image_tag('http://www.airelibre.com.ar/wp-content/uploads/2014/06/CRD-3.jpg', class: 'img-responsive', alt: 'Puedes encontrar el motivo que creo tu malestar')
      .carousel-caption
        %h3 Puedes encontrar el motivo que creo tu malestar
    .item
      .carousel_image_holder
        =image_tag('http://1.bp.blogspot.com/-TQa1uNgAeOQ/TyQ_yRXR6VI/AAAAAAAAAHU/purkUZEFWNY/s1600/S6300636.JPG', class: 'img-responsive', alt: 'Puedes recuperarte en menos tiempo')
      .carousel-caption
        %h3 Puedes recuperarte en menos tiempo
        %p sin dejar de hacer tu actividad
    .item
      .carousel_image_holder
        =image_tag('http://www.acironfisioterapiafuncional.com/wp-content/uploads/2013/06/Acir%C3%B3n-Fisioterapia-Funcional-6.jpg', class: 'img-responsive', alt: 'Puedes evitar la sobremedicación')
      .carousel-caption
        %h3 Puedes evitar la sobremedicación
        %p y con ello sus efectos secundarios
  
  %a.left.carousel-control{'data-slide' => 'prev', href: '#carousel-example-generic', role: 'button'}
    %span.fa.fa-angle-left{'aria-hidden' => 'true', style: 'margin-top:100%'}
    %span.sr-only Anterior
  %a.right.carousel-control{'data-slide' => 'next', href: '#carousel-example-generic', role: 'button'}
    %span.fa.fa-angle-right{'aria-hidden' => 'true', style: 'margin-top:100%'}
    %span.sr-only Siguiente