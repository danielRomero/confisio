- if Setting.first.landing_images.length > 0
  #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
    / Indicators
    %ol.carousel-indicators
      - Setting.first.landing_images.each_with_index do |image, index|
        %li{"data-slide-to" => "#{index}", "data-target" => "#carousel-example-generic", class: "#{index == 0 ? 'active' : nil}"}
    
    .carousel-inner{:role => "listbox"}
      - Setting.first.landing_images.each_with_index do |image, index|
        .item{class: "#{index == 0 ? 'active' : nil}"}
          .carousel_image_holder
            =image_tag(image, class: 'img-responsive', alt: 'Fisioterapeutas colegiados en constante formación')
      -#.item
        .carousel_image_holder
          =image_tag('http://res.cloudinary.com/confisio/image/upload/v1431886719/Camilla_sala_fisio_mmpko9.jpg', class: 'img-responsive', alt: 'Puedes dejar tu cuerpo en mejores condiciones tras la lesión')
        .carousel-caption
          %h3 Puedes dejar tu cuerpo en mejores condiciones tras la lesión
      -#.item
        .carousel_image_holder
          =image_tag('http://res.cloudinary.com/confisio/image/upload/v1431886300/20150517_145411_HDR_llplpp.jpg', class: 'img-responsive', alt: 'Puedes encontrar el motivo que creo tu malestar')
        .carousel-caption
          %h3 Puedes encontrar el motivo que creo tu malestar
      -#.item
        .carousel_image_holder
          =image_tag('http://res.cloudinary.com/confisio/image/upload/v1431886233/20150517_150323_HDR_jshgvf.jpg', class: 'img-responsive', alt: 'Puedes recuperarte en menos tiempo')
        .carousel-caption
          %h3 Puedes recuperarte en menos tiempo
          %p sin dejar de hacer tu actividad
      -#.item
        .carousel_image_holder
          =image_tag('http://www.acironfisioterapiafuncional.com/wp-content/uploads/2013/06/Acir%C3%B3n-Fisioterapia-Funcional-6.jpg', class: 'img-responsive', alt: 'Puedes evitar la sobremedicación')
        .carousel-caption
          %h3 Puedes evitar la sobremedicación
          %p y con ello sus efectos secundarios
    
    %a.left.carousel-control{'data-slide' => 'prev', href: '#carousel-example-generic', role: 'button'}
      %span.fa.fa-angle-left{'aria-hidden' => 'true', style: 'margin-top:100%'}
      %span.sr-only Anterior
    %a.right.carousel-control{'data-slide' => 'next', href: '#carousel-example-generic', role: 'button'}
      %span.fa.fa-angle-right{'aria-hidden' => 'true', style: 'margin-top:100%'}
      %span.sr-only Siguiente