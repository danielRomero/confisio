%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      =link_to root_path, class: 'navbar-brand', style: 'padding-top: 10px;' do
        =image_tag('nombre-logo.png', alt: APP_NAME, class: 'img-responsive', style: 'width: 90px')
    #navbar.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li{class: (params[:controller] == 'discounts') ? 'active' : nil}
          =link_to 'Tarifas y promociones', discounts_path
        -if Post.from_category('Psicología').count > 0
          %li{class: (params[:controller] == 'posts' and params[:category] == 'psicologia') ? 'active' : nil}
            =link_to 'Psicología', posts_by_category_path('psicologia')
        -if Post.from_category('Fisioterapia').count > 0
          %li{class: (params[:controller] == 'posts' and params[:category] == 'fisioterapia') ? 'active' : nil}
            =link_to 'Fisioterapia', posts_by_category_path('fisioterapia')

        %li{class: (params[:action] == 'about' and params[:controller] == 'pages') ? 'active' : nil}
          =link_to 'Contacto', about_path
        %li{class: (params[:action] == 'team' and params[:controller] == 'pages') ? 'active' : nil}
          =link_to 'Equipo', team_path
        
        -#%li{class: (params[:action] == 'about' and params[:controller] == 'pagessss') ? 'active' : nil}
          =link_to 'Equipo', about_path

        -if admin?
          %li{class: (params[:controller] == 'controls') ? 'active' : nil}
            =link_to 'Panel Control', control_path
      %ul.nav.navbar-nav.pull-right
        -if signed_in?
          %li
            =link_to current_user.name || current_user.email, user_path(current_user)
          %li
            =link_to 'Salir', logout_path, method: :delete
        -else
          %li
            =link_to 'Iniciar Sesión', login_path