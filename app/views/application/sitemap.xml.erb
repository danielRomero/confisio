<?xml version="1.0" encoding="UTF-8"?>
  <% cache ['v2', 'sitemap'], :expires_in => 1.day do %>
  <urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"> 
    <url>
      <loc><%= root_url %></loc>
      <lastmod><%= I18n.l(7.days.ago, :format => :w3c) %></lastmod>      
    </url>

    <url>
      <loc><%= tarifas_url %></loc>
      <lastmod><%= I18n.l(Category.maximum(:updated_at), :format => :w3c) %></lastmod>
    </url>
    
    <url>
      <loc><%= contact_url %></loc>
      <lastmod><%= I18n.l(1.month.ago, :format => :w3c) %></lastmod>
    </url>

    <url>
      <loc><%= team_url %></loc>
      <lastmod><%= I18n.l(1.month.ago, :format => :w3c) %></lastmod>
    </url>

    <% User.employers.all.each do |employee| %>
      <url>
        <loc><%= employee_url(employee.section.permalink, employee.permalink) %></loc>
        <lastmod><%= I18n.l(employee.updated_at, :format => :w3c) %></lastmod>
      </url>
    <% end %>

    <% Section.all.each do |section| %>

      <url>
        <loc><%= sections_permalink_url(section.permalink) %></loc>
        <lastmod><%= I18n.l(1.week.ago, :format => :w3c) %></lastmod>
      </url>

      <url>
        <loc><%= prices_url(section.permalink) %></loc>
        <lastmod><%= I18n.l(section.updated_at, :format => :w3c) %></lastmod>
      </url>

      <% section.discounts.all.each do |discount| %>
        <url>
          <loc><%= discount_url(section.permalink, discount.permalink) %></loc>
          <lastmod><%= I18n.l(discount.updated_at, :format => :w3c) %></lastmod>
        </url>
      <% end %>

      <% section.categories.with_posts.each do |category| %>
        <url>
          <loc><%= category_url(section.permalink, category.permalink) %></loc>
          <lastmod><%= I18n.l(category.updated_at, :format => :w3c) %></lastmod>
        </url>
        <% category.posts.all.each do |post| %>
          <url>
            <loc><%= post_permalink_url(section.permalink, category.permalink, post.permalink) %></loc>
            <lastmod><%= I18n.l(post.updated_at, :format => :w3c) %></lastmod>
          </url>
        <% end %>

      <% end %>

    <% end %>
    
  </urlset>
<% end %>