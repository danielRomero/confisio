<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"> 
  <url>
    <loc>http://<%= ENV['HOST'] %></loc>
    <lastmod><%= I18n.l(7.days.ago, :format => :w3c) %></lastmod>
    
  </url>
  
  <url>
    <loc>http://<%= ENV['HOST'] %>/contacto</loc>
    <lastmod><%= I18n.l(7.days.ago, :format => :w3c) %></lastmod>
  </url>

  <url>
    <loc>http://<%= ENV['HOST'] %>/equipo</loc>
    <lastmod><%= I18n.l(7.days.ago, :format => :w3c) %></lastmod>
  </url>

  <url>
    <loc>http://<%= ENV['HOST'] %>/descuentos</loc>
    <lastmod><%= I18n.l(7.days.ago, :format => :w3c) %></lastmod>
  </url>

  <% Category.all.each do |category| %>
    <% if !category.posts.blank? %>
      <url>
        <loc>http://<%= ENV['HOST'] %>/blog/<%= (category.name.downcase == 'psicología') ? 'psicologia' : category.name.downcase %></loc>
        <lastmod><%= I18n.l(category.updated_at, :format => :w3c) %></lastmod>
      </url>
    <% end %>

    <% category.posts.each do |post| %>
      <url>
        <loc>http://<%= ENV['HOST'] %>/blog/<%= (category.name.downcase == 'psicología') ? 'psicologia' : category.name.downcase %>/<%= post.permalink %></loc>

        <lastmod><%= I18n.l(post.updated_at, :format => :w3c) %></lastmod>

      </url>
    <% end %>
  <% end %>
  
</urlset>